
@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">

    <a class="btn btn-block btn-outline-secondary" asp-controller="Home" asp-action="Index">All Teams</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-teamName="@t" class="btn btn-block @(ViewBag.TeamName == t ? "btn-outline-primary" : "btn-outline-secondary")">@t</a>
    }

</div>