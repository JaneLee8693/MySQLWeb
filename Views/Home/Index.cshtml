@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Bowler>

<h1>Bowlers @*@ViewBag["Team"]*@</h1>

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold table-dark">
        <tr>
            <td>Bowler ID</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Middle Init</td>
            <td>Address</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.BowlerID</td>
                <td>@x.BowlerFirstName</td>
                <td>@x.BowlerLastName</td>
                <td>@x.BowlerMiddleInit</td>
                <td>@x.BowlerAddress</td>
                <td>@x.BowlerState</td>
                <td>@x.BowlerZip</td>
                <td>@x.BowlerPhoneNumber</td>

                <td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.BowlerId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.BowlerId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
