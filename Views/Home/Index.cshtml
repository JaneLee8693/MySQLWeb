@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

@if (@ViewBag.TeamName != null)
{
    <h4>Team Name: @ViewBag.TeamName</h4>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr class="table-info text-center">
            <td>First Name</td>
            <td>Middle Initial</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
            <td>Team Name</td>
        </tr>
    </thead>

    <tbody>


        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                <td>@b.Team.TeamName</td>

                <td><a asp-action="Edit" asp-controller="Home" asp-route-id="@b.BowlerID">Edit</a></td>
                <td><a asp-action="Delete" asp-controller="Home" asp-route-id="@b.BowlerID">Delete</a></td>
            </tr>
        }

    </tbody>
</table>

<a asp-action="Form" class="btn btn-primary">Create New Bowler</a>
